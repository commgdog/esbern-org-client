{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,

    "types": [
      "node",
      "vite/client",
    ],

    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "exclude": [
    "tests",
    "node_modules",
    "build",
  ],
}
